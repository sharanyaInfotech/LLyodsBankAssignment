<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigations"
    app:startDestination="@id/categoryListFragment">

    <fragment android:id="@+id/categoryListFragment"
        android:name="com.example.llyodsbankassignment.views.ui.fragments.CategoryListFragment"
        android:label="Food Items"
        tools:layout="@layout/fragment_category_list"
        app:destination="@id/categoryDetailsFragment">

        <action
            android:id="@+id/action_listFrg_to_DetailFragment"
            app:destination="@+id/categoryDetailsFragment" />
    </fragment>

    <fragment android:id="@+id/categoryDetailsFragment"
        android:name="com.example.llyodsbankassignment.views.ui.fragments.CategoryDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_category_details"
        app:destination="@id/mealByCategoryDetail">

        <action
            android:id="@+id/action_listFrg_to_mealDetailFragment"
            app:destination="@+id/mealByCategoryDetail" />
    </fragment>

    <fragment android:id="@+id/mealByCategoryDetail"
        android:name="com.example.llyodsbankassignment.views.ui.fragments.AvailableMenuByCategoryFragment"
        android:label="Menu Details"
        tools:layout="@layout/fragment_available_menu_by_category">
    </fragment>

</navigation>